<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:MyBankApi.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:material="clr-namespace:Material.Avalonia.Controls;assembly=Material.Avalonia"
        x:Class="MyBankApi.Views.MainWindow"
        Width="400" Height="500"
        Title="Биржа валют">
    
    <Window.Styles>
        <StyleInclude Source="avares://Material.Avalonia/Styles/Material.Avalonia.xaml" />
    </Window.Styles>

    <StackPanel Margin="20">
        <material:MaterialButton Content="Пополнить кошелек" Command="{Binding DepositWalletCommand}" Margin="0,10"/>
        <material:MaterialButton Content="Конвертировать валюту" Command="{Binding ConvertCurrencyCommand}" Margin="0,10"/>
        <material:MaterialButton Content="Добавить валюту" Command="{Binding AddCurrencyCommand}" Margin="0,10"/>
        <material:MaterialButton Content="Просмотр кошелька" Command="{Binding ViewBalanceCommand}" Margin="0,10"/>
        <material:MaterialButton Content="История транзакций" Command="{Binding ViewTransactionHistoryCommand}" Margin="0,10"/>
    </StackPanel>
</Window>